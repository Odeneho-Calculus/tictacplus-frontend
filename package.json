{
  "name": "tictac-plus-frontend",
  "version": "1.0.0",
  "description": "Advanced AAA-Style Tic Tac Toe Game - Frontend",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vite --host",
    "dev:minimal": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" vite --config vite.minimal.config.js --host",
    "serve": "serve dist -s",
    "start": "serve dist -s",
    "build": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,scss,css}"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "axios": "^1.5.0",
    "classnames": "^2.3.2",
    "framer-motion": "^10.16.4",
    "lottie-react": "^2.4.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.5.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.16.0",
    "redux-persist": "^6.0.0",
    "socket.io-client": "^4.7.2",
    "use-sound": "^4.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.15",
    "cross-env": "^7.0.3",
    "cypress": "^13.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "glob": "^11.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "postcss": "^8.4.29",
    "prettier": "^3.0.2",
    "sass": "^1.77.6",
    "serve": "^14.2.4",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}